<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.kmotion"
       name="Kmotion XBMC"
       version="0.9.0"
       provider-name="K-Net">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup" version="3.0.8"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
             library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <minversion>29000</minversion>
    <language>fr</language>
    <summary>KMotion.fr Video plugin</summary>
    <license>GNU GENERAL PUBLIC LICENSE. Version 3, June 1997</license>
    <forum>http://forum.nolife-tv.com/showthread.php?t=11012</forum>
    <website>http://wiki.xbmc.org/index.php?title=Add-on:Nolife_Online</website>
    <source>http://dev.gormotte.info/plugin.video.nolife</source>
    <email>pierre.wirtz@k-net.pro</email>
    <description lang="fr">Ce plugin permet d'accéder aux vidéos du site KMotion.fr. Un compte est nécessaire.
    </description>
    <description lang="en">This plugin allows to access the videos on KMotion.fr
    </description>
    <disclaimer lang="fr">Ce plugin est fourni "en l'état" et présente moins de fonctionnalités que le site web.</disclaimer>
    <disclaimer lang="en">This plugin is provided "as-is" et has less functions than the website..</disclaimer>
  </extension>
</addon>

